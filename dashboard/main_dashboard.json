{
  "dashboard": {
    "name": "Agentic Flight Scheduler Dashboard",
    "version": "1.0.0",
    "description": "AI-powered flight scheduling optimization dashboard for airport operations",
    "author": "Agentic Flight Scheduler Team",
    "created": "2024-01-01",
    "last_modified": "2024-01-01"
  },
  "configuration": {
    "api_base_url": "{{API_BASE_URL || 'http://localhost:8000'}}",
    "refresh_interval": 30000,
    "auto_refresh": true,
    "theme": "light",
    "responsive": true,
    "mobile_optimized": true
  },
  "layout": {
    "type": "grid",
    "columns": 12,
    "rows": 20,
    "gap": 16,
    "padding": 16,
    "background": "#f5f5f5"
  },
  "header": {
    "title": "Flight Schedule Optimization Dashboard",
    "subtitle": "{{airport_selector.value || 'BOM'}} - {{moment(date_picker.value).format('MMM DD, YYYY')}}",
    "logo": "/assets/logo.png",
    "actions": [
      {
        "type": "button",
        "label": "Help",
        "icon": "help",
        "action": "open_modal",
        "modal": "help_modal"
      },
      {
        "type": "button",
        "label": "Settings",
        "icon": "settings",
        "action": "open_modal",
        "modal": "settings_modal"
      }
    ]
  },
  "components": [
    {
      "id": "demand_heatmap",
      "source": "./components/demand_heatmap.json",
      "position": {"x": 0, "y": 0, "width": 8, "height": 10}
    },
    {
      "id": "flight_gantt",
      "source": "./components/flight_gantt.json", 
      "position": {"x": 8, "y": 0, "width": 4, "height": 10}
    },
    {
      "id": "recommendation_cards",
      "source": "./components/recommendation_cards.json",
      "position": {"x": 0, "y": 10, "width": 12, "height": 6}
    },
    {
      "id": "optimize_button",
      "source": "./components/optimize_button.json",
      "position": {"x": 0, "y": 16, "width": 6, "height": 2}
    },
    {
      "id": "control_panel",
      "source": "./components/control_panel.json",
      "position": {"x": 6, "y": 16, "width": 6, "height": 4}
    },
    {
      "id": "metrics_summary",
      "source": "./components/metrics_summary.json",
      "position": {"x": 0, "y": 18, "width": 12, "height": 2}
    }
  ],
  "modals": [
    {
      "id": "whatif_modal",
      "source": "./components/whatif_interface.json"
    },
    {
      "id": "flight_details_modal",
      "source": "./modals/flight_details.json"
    },
    {
      "id": "recommendation_details_modal",
      "source": "./modals/recommendation_details.json"
    },
    {
      "id": "risk_details_modal",
      "source": "./modals/risk_details.json"
    },
    {
      "id": "help_modal",
      "source": "./modals/help_modal.json"
    },
    {
      "id": "settings_modal",
      "source": "./modals/settings_modal.json"
    }
  ],
  "global_variables": {
    "airport_selector": "BOM",
    "date_picker": "{{moment().format('YYYY-MM-DD')}}",
    "bucket_selector": 10,
    "weather_selector": "calm",
    "optimization_status": "idle",
    "optimization_progress": 0,
    "optimization_result": null,
    "whatif_status": "idle",
    "whatif_result": null,
    "selected_flights": [],
    "selected_time_slot": null
  },
  "global_actions": {
    "refresh_all_components": {
      "type": "multi_action",
      "actions": [
        {"action": "refresh_component", "target": "demand_heatmap"},
        {"action": "refresh_component", "target": "flight_gantt"},
        {"action": "refresh_component", "target": "metrics_summary"}
      ]
    },
    "reset_all_filters": {
      "type": "multi_action",
      "actions": [
        {"action": "set_variable", "variable": "airport_selector", "value": "BOM"},
        {"action": "set_variable", "variable": "date_picker", "value": "{{moment().format('YYYY-MM-DD')}}"},
        {"action": "set_variable", "variable": "bucket_selector", "value": 10},
        {"action": "set_variable", "variable": "weather_selector", "value": "calm"}
      ]
    },
    "export_dashboard_data": {
      "type": "export",
      "format": "excel",
      "filename": "flight_schedule_analysis_{{moment().format('YYYY-MM-DD')}}",
      "data_sources": [
        "demand_heatmap.data",
        "flight_gantt.data", 
        "optimization_result"
      ]
    },
    "apply_recommendation": {
      "type": "api_call",
      "endpoint": "/optimize/apply",
      "method": "POST",
      "payload": "{{actionData}}",
      "on_success": [
        {"action": "refresh_all_components"},
        {"action": "show_notification", "type": "success", "message": "Recommendation applied successfully"}
      ]
    },
    "save_whatif_scenario": {
      "type": "api_call",
      "endpoint": "/scenarios",
      "method": "POST",
      "payload": {
        "name": "What-if scenario {{moment().format('YYYY-MM-DD HH:mm')}}",
        "data": "{{whatif_result}}"
      }
    }
  },
  "notifications": {
    "position": "top-right",
    "duration": 5000,
    "max_notifications": 3
  },
  "responsive_breakpoints": {
    "mobile": 768,
    "tablet": 1024,
    "desktop": 1200
  },
  "mobile_layout": {
    "stack_components": true,
    "hide_components": ["control_panel"],
    "component_overrides": {
      "demand_heatmap": {"width": 12, "height": 8},
      "flight_gantt": {"width": 12, "height": 6},
      "recommendation_cards": {"width": 12, "height": 8}
    }
  }
}